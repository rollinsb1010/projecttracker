<h3>Attachments</h3>

<html>
<body class="index">
	
<%= link_to 'Back', attachments_path %>
		
	<table class="summary" width="600px" style="width:600px;">
		<tr>
		<th>Attachments</th><br />
		<th></th><br />
		<th></th><br />
		</tr>
	</table><br /><br />
      		
		
		<table class="table table-striped table-bordered table-condensed">
		<thead>
  <tr>
  	<th>ID</th>
    <th colspan="1">Attachment Name</th>
  </tr>
</thead>
<tbody
  <tr>
  <% unless @attachments.empty? %>
    <% @attachments.each do |attachment| %>
      <td><%= attachment.id %></td>
      <td><%= link_to attachment.attachment_name, attachment %></td>   
      <td><%= link_to(edit_attachment_path(attachment), class: "btn btn-small") do %>
          Edit <i class="icon-edit icon-white"></i></td></tr>
        <% end %>
       
    
    <% end %>
  <tr>
  <% else %>
    <td>Move along nothing to see here<td>
  <% end %>
</tr>
</tbody>                                        
</table>

<br />


<%= link_to(new_attachment_path, class: "btn btn-success") do %>
  New attachment <i class="icon-plus icon-white"></i>
<% end %>
</div>
		<br />
		<%= link_to 'New Attachment', new_attachment_path %>
		<%= link_to 'Display Attachments', attachments_path %>
			
		




</body>
</html>

