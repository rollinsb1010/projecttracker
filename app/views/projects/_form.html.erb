
  
  <h2>ProjectTrakker</h2>
 
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
<div class="form">
<%= link_to 'Back', projects_path %><br /><br />
<%= semantic_form_for @project do |f| %>
    <%= f.inputs do %>

       <div class="project_name">
       <%= f.input :project_name %>
       </div>
       <div class="due_date">
       <%= f.label :due_date %><!-- <span style="text-align:left; font-weight:bold; background-color:gray; color:#fff;">
       	3. Due Date</span>&nbsp;&nbsp;&nbsp; --><input type="text" value="01/06/2013" id="datepicker">
       </div>
       <div class="components">
       <%= f.input :components %>
       </div>
       <div class="client_name">
       <%= f.input :client_name %>
       </div>
    <% end %>
    <%= f.actions do %>
    <div class="action_submit">
      <%= f.action :submit, :as => :button %>
      </div><div class="action_cancel">
      <%= f.action :cancel, :as => :link %>
      </div>
      </div>
    <% end %>
  <% end %>








