<!DOCTYPE html>
<html>
<head>
  <title>ProjectTrakker</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="http://code.jquery.com/ui/1.9.1/themes/base/jquery-ui.css" />
    <script src="http://code.jquery.com/jquery-1.8.2.js"></script>
    <script src="http://code.jquery.com/ui/1.9.1/jquery-ui.js"></script>
    <link rel="stylesheet" href="/resources/demos/style.css" />
    <script>
    $(function() {
        $( "#progressbar" ).progressbar({
            value: 37
        });
    });
    </script>
</head>
<body class="index">
	
<%= link_to 'Back', projects_path %>
		
	<table class="summary" width="600px" style="width:600px;">
		<tr>
		<th>Project Summary</th><br />
		<th></th><br />
		<th></th><br />
		</tr>
	</table><br /><br />
      		
		
		<table class="table table-striped table-bordered table-condensed">
		<thead>
  <tr>
  	<th>ID</th>
    <th colspan="1">Project Name</th>
    <th colspan="1">Due Date</th>
    <th colspan="1">Components</th>
    <th colspan="1">Client Name</th>
    <th colspan="1">Progress</th>
  </tr>
</thead>
<tbody
  <tr>
  <% unless @projects.empty? %>
    <% @projects.each do |project| %>
      <td><%= project.id %></td>
      <td><%= link_to project.project_name, project %></td>
      <td><%= project.due_date %></td>
      <td><%= project.components %></td>
      <td><%= project.client_name %></td>
      <td><%= project.percentage_complete %></td>
      <td><div class="progressbar"></div></td>      
      <td><%= link_to(edit_project_path(project), class: "btn btn-small") do %>
          Edit <i class="icon-edit icon-white"></i></td></tr>
        <% end %>
       
    
    <% end %>
  <tr>
  <% else %>
    <td>Move along nothing to see here<td>
  <% end %>
</tr>
</tbody>                                        
</table>

<br />


<%= link_to(new_project_path, class: "btn btn-success") do %>
  New project <i class="icon-plus icon-white"></i>
<% end %>
</div>
		<br />
		<%= link_to 'New Project', new_project_path %>
		<%= link_to 'Display Projects', projects_path %>
			
		




</body>
</html>

